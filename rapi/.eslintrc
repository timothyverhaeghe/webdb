{
  "root": true,
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  parserOptions: {
    sourceType: 'module'
  },
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "no-eval": ["error", {"allowIndirect": true}],
    "no-restricted-syntax": 0,
    "linebreak-style": 0,
    "o-absolute-path": 0,
    "no-new": 0,
    "no-console": 0,
    "no-bitwise": 0,
    "no-useless-escape": 0,
    "no-underscore-dangle": 0,
    "global-require": 0,
    "radix": "off",
    "import/no-unresolved": 0,
    "no-param-reassign": 0,
    "no-shadow": 0,
    "valid-jsdoc": ["error", {
      "requireReturn": true,
      "requireReturnType": true,
      "requireParamDescription": true,
      "requireReturnDescription": true
    }],
    "require-jsdoc": ["error", {
        "require": {
            "FunctionDeclaration": true,
            "MethodDefinition": true,
            "ClassDeclaration": true
        }
    }]
  }
}
